<% layout('/layouts/application') -%>
<% block('title', 'New post') -%>

<div class="panel panel-default">
<div class="panel-body">

<form class="form-horizontal login-form" name="login-form" method="post">
  <div class="form-group">
    <label for="input-username" class="col-lg-2 control-label">Title</label>

    <div class="col-lg-10">
      <input name="title" value="" type="text" class="form-control" id="input-username" placeholder="Title">
    </div>
  </div>

  <div class="form-group">
    <label for="input-username" class="col-lg-2 control-label">Body</label>

    <div class="col-lg-10">
      <textarea name="body" value="" type="text" class="form-control" id="input-username" placeholder="Body"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="input-username" class="col-lg-2 control-label">Image url</label>

    <div class="col-lg-10">
      <input name="imgUrl" value="" type="text" class="form-control" id="input-username" placeholder="Image url">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-primary">Create post</button>
      <span class="help-block error"></span>
    </div>
  </div>
</form>

</div>
</div>
