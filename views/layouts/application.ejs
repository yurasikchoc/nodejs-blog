<!DOCTYPE html>
<html>
<head>
  <title><%= blocks.title || 'Blog' %></title>
  
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>  
  <script src='https://rawgit.com/FezVrasta/bootstrap-material-design/master/dist/js/ripples.js'></script>
  <script src='https://rawgit.com/FezVrasta/bootstrap-material-design/master/dist/js/material.js'></script>
  <script src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js'></script>
  <script src='/javascripts/application.js'></script>

  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700"/>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons"/>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css'/>
  <link rel='stylesheet' href='https://rawgit.com/FezVrasta/bootstrap-material-design/master/dist/css/bootstrap-material-design.css'/>
  <link rel='stylesheet' href='https://rawgit.com/FezVrasta/bootstrap-material-design/master/dist/css/ripples.css'/>

</head>
<body>

<%-partial('../partials/topNavigation')%>

<div class='container'>

  <% if (error.length > 0) { %>
    <div class="alert alert-danger">
      <%= error %>  
    </div>
  <% } %>
  <% if (success.length > 0) { %>
    <div class="alert alert-success">
      <%= success %>  
    </div>
  <% } %>
  <% if (blocks.title) { %><h1><%=blocks.title%></h1><% } %>
  <div class="col-lg-12">
    <%-body -%>
  </div>  
</div>
<footer>
  <%-blocks.footer%>
</footer>
</body>
<script type='text/javascript'>
$.material.init();

</script>
</html>